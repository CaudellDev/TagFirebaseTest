<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.caudelldevelopment.test.tagfirebasetest.MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/app_bar_main"

    android:background="#0000FF">

    <com.pchmn.materialchips.ChipsInput android:visibility="gone"
        android:id="@+id/tag_input"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:focusedByDefault="false"
        android:padding="5dp"
        app:chip_backgroundColor="@color/tagBackgroundColor"
        app:chip_deletable="true"

        app:chip_deleteIconColor="@color/deleteIconColor"
        app:chip_detailed_backgroundColor="@color/tagBackgroundColor"
        app:chip_detailed_deleteIconColor="@color/deleteIconColor"
        app:chip_detailed_textColor="@color/tagLabelColor"
        app:chip_hasAvatarIcon="true"
        app:chip_labelColor="@color/tagLabelColor"
        app:filterable_list_backgroundColor="@android:color/white"
        app:filterable_list_textColor="@color/tagLabelColor"
        app:hint="Enter a name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxRows="3" />

    <android.support.v7.widget.RecyclerView android:background="#FF0000"
        android:id="@+id/main_item_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="326dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent" />

</LinearLayout>
