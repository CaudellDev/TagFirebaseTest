<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.caudelldevelopment.test.tagfirebasetest.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <com.pchmn.materialchips.ChipsInput
        android:id="@+id/tag_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="#E0E0E0"
        android:focusedByDefault="false"
        app:hint="Enter a name"
        app:maxRows="3"
        
        app:chip_labelColor="@color/tagLabelColor"
        app:chip_hasAvatarIcon="true"
        app:chip_backgroundColor="@color/tagBackgroundColor"
        app:chip_deletable="true"
        app:chip_deleteIconColor="@color/deleteIconColor"
        app:chip_detailed_textColor="@color/tagLabelColor"
        app:chip_detailed_backgroundColor="@color/tagBackgroundColor"
        app:chip_detailed_deleteIconColor="@color/deleteIconColor"
        app:filterable_list_backgroundColor="@android:color/white"
        app:filterable_list_textColor="@color/tagLabelColor" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_item_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_weight="1"/>

</android.support.constraint.ConstraintLayout>
